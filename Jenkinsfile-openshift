// see https://dzone.com/refcardz/declarative-pipeline-with-jenkins for examples

pipeline {
  agent {
    label 'maven'
  }
  stages {
    stage("Checkout Code") {
      steps {
        checkout scm
      }
    }
    stage("Build with Maven") {
      steps {
        sh "mvn clean"
        sh "mvn install"
      }
    }
    stage("Create Images") {
      sh "docker build -t registry/myproject/clone1-app ."
    }
    stage("Push Images") {
      sh "docker push registry/myproject/clone1-app"
    }
  }
}