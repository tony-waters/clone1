// see https://dzone.com/refcardz/declarative-pipeline-with-jenkins for examples

pipeline {
  agent any
  stages {
    stage("Checkout Code") {
      steps {
        checkout scm
      }
    }
    stage("Build with Maven") {
      steps {
        sh "mvn clean"
        sh "mvn install"
      }
    }
    stage("Create Images") {
        steps {
            script {
                openshift.withCluster() {
                    openshift.selector("bc", "clone1-build").startBuild()
                }
            }
        }
    }
  }
}